<hi> All Users</hi>

<%= will_paginate %>
<br/>
<ul class="users">
    <% @users.each do |user| %>
        <li>
            <%= gravatar_for(user) %>
            <%= link_to user.name, user %>
            <% if current_user.admin? && !user.admin? %>
                <%= link_to 'Delete', user, :method => :delete, :confirm => 'You sure ?', :title => "Delete #{user.name}" %>
            <% end %>
        </li>
    <% end %>
</ul>
<br/>
<%= will_paginate %>
